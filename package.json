{
  "name": "fusion-tables-drive-export",
  "description": "Export Google Fusion Tables to Google Drive",
  "version": "1.0.0",
  "license": "",
  "author": "Ubilabs",
  "engines": {
    "node": ">=10"
  },
  "repository": "https://github.com/ubilabs/fusion-tables-drive-export",
  "main": "server/index.js",
  "private": true,
  "scripts": {
    "start": "node server/index.js",
    "start:dev": "run-p 'start:dev:server' 'start:dev:visualizer'",
    "start:dev:server": "nodemon --watch 'server-src/**/*.ts' --exec 'ts-node' server-src/index.ts",
    "start:dev:visualizer": "parcel --no-hmr ./visualizer-src/index.html -d ./server-static/visualizer  --public-url /visualizer/",
    "build": "run-p 'build:server' 'build:visualizer'",
    "build:server": "tsc -p .",
    "prebuild:visualizer": "rm -rf ./server-static/visualizer",
    "build:visualizer": "parcel build ./visualizer-src/index.html -d ./server-static/visualizer  --public-url /visualizer/",
    "prettier:ci": "prettier --list-different '{visualizer-src/**/*.ts,server-static/*.js,server-src/**/*.ts}'",
    "prettier:fix": "prettier --write '{visualizer-src/**/*.ts,server-static/*.js,server-src/**/*.ts}'",
    "deploy": "yarn run test && yarn run build && gcloud app deploy --project fusion-tables-export",
    "test": "yarn run prettier:ci && tslint -p . -e '**/*.json'"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "dependencies": {
    "@tmcw/togeojson": "3.0.0",
    "boom": "^7.3.0",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.4",
    "googleapis": "^39.2.0",
    "helmet": "^3.16.0",
    "json2csv": "^4.4.1",
    "mitt": "^1.1.3",
    "node-fetch": "^2.3.0",
    "p-limit": "^2.2.0",
    "papaparse": "^4.6.3",
    "pug": "^2.0.3",
    "wkx": "^0.4.6",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@danmarshall/deckgl-typings": "^2.2.1",
    "@deck.gl/core": "^6.4.9",
    "@deck.gl/layers": "^6.4.9",
    "@types/boom": "^7.2.1",
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.1",
    "@types/gapi": "^0.0.36",
    "@types/gapi.auth2": "^0.0.50",
    "@types/gapi.client": "^1.0.1",
    "@types/gapi.client.drive": "^3.0.3",
    "@types/geojson": "^7946.0.7",
    "@types/googlemaps": "^3.30.19",
    "@types/helmet": "^0.0.43",
    "@types/json2csv": "^4.2.0",
    "@types/node": "^11.13.0",
    "@types/node-fetch": "^2.3.0",
    "@types/papaparse": "^4.5.9",
    "@types/xmldom": "^0.1.29",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  }
}
