{
  "name": "fusion-tables-drive-export",
  "description": "Export Google Fusion Tables to Google Drive",
  "version": "1.0.0",
  "license": "",
  "author": "Ubilabs",
  "engines": {
    "node": ">=8"
  },
  "repository": "https://github.com/ubilabs/fusion-tables-drive-export",
  "main": "server/index.js",
  "private": true,
  "scripts": {
    "start": "node server/index.js",
    "start:dev": "yarn run start:dev:server",
    "start:dev:server": "yarn run build:server:live",
    "build": "yarn run build:server",
    "build:server": "tsc -p .",
    "build:server:live": "nodemon --watch 'server-src/**/*.ts' --exec 'ts-node' server-src/index.ts",
    "prettier:ci": "prettier --list-different '{server-assets/*.js,server-src/**/*.ts}'",
    "prettier:fix": "prettier --write '{server-assets/*.js,server-src/**/*.ts}'",
    "deploy": "yarn run test && yarn run build && gcloud app deploy",
    "test": "yarn run prettier:ci && tslint -p . -e '**/*.json' && yarn run build"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "dependencies": {
    "@tmcw/togeojson": "^1.0.0",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.4",
    "googleapis": "^37.2.0",
    "helmet": "^3.15.1",
    "json2csv": "^4.3.4",
    "mitt": "^1.1.3",
    "node-fetch": "^2.3.0",
    "p-limit": "^2.1.0",
    "papaparse": "^4.6.3",
    "pug": "^2.0.3",
    "wkx": "^0.4.6",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.1",
    "@types/geojson": "^7946.0.6",
    "@types/helmet": "0.0.42",
    "@types/json2csv": "^4.2.0",
    "@types/node": "^11.9.0",
    "@types/node-fetch": "^2.1.6",
    "@types/p-limit": "^2.0.0",
    "@types/papaparse": "^4.5.7",
    "@types/xmldom": "^0.1.29",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
